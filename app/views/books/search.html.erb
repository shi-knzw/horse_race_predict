 <h1>Rakuserach</h1>
<div class='content'>
  <div id="search-box">
    <%= form_tag('/books/search', {method: :get}) do %>
        <%= text_field_tag :book, "",  id: "book_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <% if @books %>
    <div id='book_list'>
      <%= render "book_list" %>
    </div>
  <% end %>
</div>
