<div class="books_info">
  <h3>書籍ランキング上位５冊</h3>
  <div style="padding: 30px;">
    <table border="1">
      <thead>
        <tr>
          <th>書籍名</th>
          <th>価格</th>
          <th>画像</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book[:name] %></td>
            <td><%= book[:price] %>円</td>
            <% if File.exist?("app/assets/images/#{book[:id]}.jpg") %>
              <td><%= image_tag "#{book[:id]}.jpg", size: '300x300', class: 'hoge' %></td>
            <% else %>
              <td><%= image_tag 'rails.jpg', class: 'hoge' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @books %>
</div>